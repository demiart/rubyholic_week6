<h1>Listing events</h1>

<table>
  <tr>
    <th>Group</th>
    <th>Location</th>
    <th>Name</th>
    <th>Description</th>
    <th>Start time</th>
    <th>End time</th>
  </tr>

<% for event in @events %>
  <tr>
    <td><%=h event.group_id %></td>
    <td><%=h event.location_id %></td>
    <td><%=h event.name %></td>
    <td><%=h event.description %></td>
    <td><%=h get_nice_time(event.start_time) %></td>
    <td><%=h get_nice_time(event.end_time) %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

