<h1>Editing event</h1>

<% form_for(@event) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :group_id %><br />
    <%= @event.group.name %>
    <%= f.hidden_field :group_id, :value => @event.group.id %>
  </p>
  <p>
    <%= f.label :location_id %><br />
    <%= f.select(:location_id, @locations_list ) %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :start_time %><br />
    <%= f.datetime_select :start_time %>
  </p>
  <p>
    <%= f.label :end_time %><br />
    <%= f.datetime_select :end_time %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @event %> |

<%= link_to "Back to #{@event.group.name}", :controller => 'groups',
    :id => @event.group_id %>

<%= link_to 'Remove this event', @event,
    :confirm => 'Whoah there, are you sure?',
    :method => :delete %>


