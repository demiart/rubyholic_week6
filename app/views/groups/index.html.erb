<h1>Listing groups</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Website url</th>
    <th>Description</th>
  </tr>

<!-- alternating row colors -->
<% row = 0 %>

<% for group in @groups %>
  <tr <%= "class='row#{row}'" %> >
    <td class='name, clearlink'><%= link_to group.name, group %></td>
<!-- <%=h group.name %></td> -->
    <% if !group.website_url then %>
      <td>&nbsp;</td>
    <% else %>
      <td class='clearlink'><%= link_to "#{group.website_url}", group.website_url %></td>
    <% end %>
    <td><%=h group.description %></td>
  </tr>
<% row = row == 1 ? 0 : 1 %> 
<% end %>
</table>
<br />


<%= link_to 'New group', new_group_path %>

<br />
<br />
<br />


<%= will_paginate @groups %>



<div id='all_locations'>
<br />

<% form_tag( {:action => 'index'}, {:method => 'get'})  do %>
<!--<% def_loc = params["location"] ? Location.find(params["location"]) : Location.first  %>-->
<%= select_tag(:location, options_for_select(@locations, get_location_option_from_id(params["location"]) ) ) %>
<%= submit_tag( 'Go', :name => nil ) %>
<% end %>

</div>

<br />
<% if @location_choice%>

<%= link_to "Show all groups", :action => 'index' %>

<% end #if @location_choice %>



