<h1>Listing groups</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Website url</th>
    <th>Description</th>
  </tr>

<!-- alternating row colors -->
<% row = 0 %>
<% for group in @groups %>
  <tr <%= "class='row#{row}'" %> >
    <td class='name'><%=h group.name %></td>
    <% if !group.website_url then %>
      <td>&nbsp;</td>
    <% else %>
      <td class='clearlink'><%= link_to "#{group.website_url}", group.website_url %></td>
    <% end %>
    <td><%=h group.description %></td>
    <td class='button'><%= link_to 'Show', group %></td>
    <td class='button'><%= link_to 'Edit', edit_group_path(group) %></td>
    <td class='button'><%= link_to 'Destroy', group, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% row = row == 1 ? 0 : 1 %> 
<% end %>
</table>

