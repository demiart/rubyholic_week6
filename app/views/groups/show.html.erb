<p>
  <b>Name:</b>
  <%=h @group.name %>
</p>

<p>
  <b>Website url:</b>
  <%=h @group.website_url %>
</p>

<p>
  <b>Description:</b>
  <%=h @group.description %>
</p>


<h3> Upcoming Events </h3>
<ul>
<% @group.events.each do |event|%>
  <li>
    <%= link_to event.name, event %>
    <%=h event.start_time %> at
    <%= link_to event.location.name, event.location %>
  </li>
<% end %>
</ul>

<%= link_to 'Edit', edit_group_path(@group) %> |
<%= link_to 'Back', groups_path %>
